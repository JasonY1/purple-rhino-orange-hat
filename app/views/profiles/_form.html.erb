<%= form_for ([@user, @profile]) do |f| %>
  <div class="form-group">
    <%= f.label :firstname, class: "col-sm-2" %>
    <%= f.text_field :firstname, class: "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= f.label :lastname, class: "col-sm-2" %>
    <%= f.text_field :lastname, class: "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= f.label :birthdate, class: "col-sm-2" %>
    <%= f.date_select(:birthdate, :prompt => {
        :day => 'Select day', :month => 'Select month', :year => 'Select year'},
        :order => [:month, :day, :year],
        :start_year => Date.today.year,
        :end_year => (Date.today.year - 100)
    ) %>
  </div>
  
  <div class="form-group">
    <%= f.label :phonenum, class: "col-sm-2" %>
    <%= f.text_field :phonenum, class: "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= f.label :prescription_num, class: "col-sm-2" %>
    <%= f.text_field :prescription_num, class: "col-sm-10" %>
  </div>

  <div class="actions col-sm-12 update-btn">
    <%= f.submit 'Create profile', :class => 'btn btn-lg btn-default pull-right' %>
  </div>

<% end %>

