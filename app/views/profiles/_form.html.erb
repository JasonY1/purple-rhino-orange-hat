<%= form_for current_user do |f| %>
  <%= f.fields_for :profile do |m| %>
	<% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% @profile.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= m.label :firstname, class: "col-sm-2" %>
    <%= m.text_field :firstname, class: "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= m.label :lastname, class: "col-sm-2" %>
    <%= m.text_field :lastname, class: "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= m.label :birthdate, class: "col-sm-2" %>
    <%= m.date_select(:birthdate, :prompt => {
        :day => 'Select day', :month => 'Select month', :year => 'Select year'},
        :order => [:month, :day, :year],
        :start_year => Date.today.year,
        :end_year => (Date.today.year - 100)
    ) %>
  </div>
  
  <div class="form-group">
    <%= m.label :phonenum, class: "col-sm-2" %>
    <%= m.text_field :phonenum, class: "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= m.label :prescription_num, class: "col-sm-2" %>
    <%= m.text_field :prescription_num, class: "col-sm-10" %>
  </div>

  <div class="actions col-sm-12 update-btn">
    <%= m.submit 'Create profile', :class => 'btn btn-lg btn-default pull-right' %>
  </div>

<% end %>
<% end %>
